volatile int flag1, flag2, turn;

void * thr1(void * arg)
{
for (;;) {
  flag1 = 1;
  turn = 1;

L1:
  ;
  if(flag2 == 1 && turn == 1){
    goto L1;}
  flag1 = 0;
}
}

void * thr2(void * arg)
{
for (;;) {
  flag2 = 1;
  turn = 0;

L1:
  ;
  if(flag1 == 1 && turn == 0){
    goto L1;}
