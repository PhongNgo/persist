volatile int flag1 = 0, flag2 = 0, turn = 0;

void * thr1(void * arg)
{
  while (1) {
  	flag1 = 1;__asm volatile ("mfence":::"memory");
  	while(flag2 >= 1){
    		if(!(turn == 0))
      		{
        		flag1 = 0;
       	 		while(!(turn == 0)){;}
        		flag1 = 1;
      		}
	}
  	turn = 1;
  	flag1 = 0;
  }
}

void * thr2(void * arg)
{
  while (1) {
  	flag2 = 1;__asm volatile ("mfence":::"memory");
  	while(flag1 >= 1){
    		if(!(turn == 1))
      		{
        		flag2 = 0;
        		while(!(turn == 1)){;}
        		flag2 = 1;
      }}
  turn = 1;
  flag2 = 0;
 }
}


int main()
{
  __CPROVER_ASYNC_0: thr1(0);
  //__CPROVER_ASYNC_1: thr1(0);
thr2(0);

return 0;
}

