// https://www.cs.utexas.edu/~EWD/transcriptions/EWD01xx/EWD123.html
// http://courses.csail.mit.edu/6.895/fall03/projects/final/ananian.pdf
// This file is used to test with musketeer (http://www.cprover.org/wmm/fence13/index.shtml)
// NOTE that coparing with the Dekker's version of musketeer, we change in main function

// Result: musketeer needs 5 fences (without fence-insert.py)

volatile int flag1 = 0, flag2 = 0, turn = 0;

void * thr1(void * arg)
{
  while (1) {
  	flag1 = 1;
  	while(flag2 >= 1){
    		if(!(turn == 0))
      		{
        		flag1 = 0;
       	 		while(!(turn == 0)){;}
        		flag1 = 1;
      		}
	}
  	turn = 1;
  	flag1 = 0;
  }
}

void * thr2(void * arg)
{
  while (1) {
  	flag2 = 1;
  	while(flag1 >= 1){
    		if(!(turn == 1))
      		{
        		flag2 = 0;
        		while(!(turn == 1)){;}
        		flag2 = 1;
      }}
  turn = 1;
  flag2 = 0;
 }
}


int main()
{
  __CPROVER_ASYNC_0: thr1(0);
  __CPROVER_ASYNC_1: thr2(0);

return 0;
}

